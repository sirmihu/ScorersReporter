@model IEnumerable<ScorerViewModel>

<div class="row">
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Age</th>
                <th>Country</th>
                <th>Club</th>
                <th>League</th>
                <th>Total goals</th>
                <th>Total Assists</th>
                <th>Market value [EUR]</th>
                <th>Market value [PLN]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scorer in Model)
            {
                <tr>
                    <td>@scorer.FullName</td>
                    <td>@scorer.Age</td>
                    <td>@scorer.Country</td>
                    <td>@scorer.Club</td>
                    <td>@scorer.League</td>
                    <td>@scorer.TotalGoals</td>
                    <td>@scorer.TotalAssists</td>
                    <td>@scorer.MarketValueEUR</td>
                    <td>@scorer.MarketValuePLN</td>
                </tr>
            }
        </tbody>
    </table>
</div>
