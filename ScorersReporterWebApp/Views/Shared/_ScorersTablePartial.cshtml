@model IEnumerable<ScorerViewModel>

<div class="row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Age</th>
                <th>Country</th>
                <th>Club</th>
                <th>League</th>
                <th>Total goals</th>
                <th>Total Assists</th>
                <th>Market value [EUR]</th>
                <th>Market value [PLN]</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="9" class="text-center">No records found.</td>
                    </tr>
                }
                else
                {
                    foreach (var scorer in Model)
                    {
                        <tr>
                            <td>@scorer.FullName</td>
                            <td>@scorer.Age</td>
                            <td>@scorer.Country</td>
                            <td>@scorer.Club</td>
                            <td>@scorer.League</td>
                            <td>@scorer.TotalGoals</td>
                            <td>@scorer.TotalAssists</td>
                            <td>@string.Format("{0:N0}", scorer.MarketValueEUR)</td>
                            <td>@string.Format("{0:N0}", scorer.MarketValuePLN)</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
